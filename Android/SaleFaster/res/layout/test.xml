<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<Button android:id="@+id/scan_button" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/scan" />
    <EditText
        android:id="@+id/edMaSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
         android:inputType="text" 
           android:hint="barcode"
         >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sp" />

    <EditText
        android:id="@+id/edTenSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" 
        android:hint="Tên sản phẩm"
          />
    
        <TextView
        android:id="@+id/textViewe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá bán:" />
        
 <EditText
        android:id="@+id/edGiaban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" 
        android:hint="Giá bán"
        android:text="1"
          />
    <TextView
        android:id="@+id/txtsoluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng:" />
    <EditText
        android:id="@+id/edSoLuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="1"
        android:inputType="number" 
        android:hint="Số lượng đang có"
          />
 <TextView
        android:id="@+id/giamua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá mua:" />
 <EditText
     android:id="@+id/edGiamua"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:ems="10"
     android:hint="Giá mua"
     android:inputType="number"
     android:text="0" />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
        <Button
    android:id="@+id/btnSave"
    android:layout_width="161dp"
    android:layout_height="wrap_content"
    android:text="Lưu" />
<Button
    android:id="@+id/btnCancel"
    android:layout_width="161dp"
    android:layout_height="wrap_content"
    android:text="Quay về" />
</LinearLayout>
<Button
    android:id="@+id/btnDelete"
    android:layout_width="161dp"
    android:layout_height="wrap_content"
    android:text="Xóa" />
<ListView android:id="@+id/gridView1" android:layout_width="fill_parent"
  android:layout_height="fill_parent" />
</LinearLayout>
</ScrollView>